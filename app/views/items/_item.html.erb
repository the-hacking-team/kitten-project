
<div class="product-container">
  <div class="product">
    <img class="product-img" src="<%= @item.image_url%>" alt="Card image cap">
    <div class="product-body">
        <h5 class="product-title"><%= @item.title %></h5>
        <p class="product-text"><%= @item.description %></p>
        <p class="product-price"><small class="text-muted"><%= @item.price %> â‚¬</small></p>

      <% if user_signed_in? %>
        
      <%= form_tag( { :controller => :carts, :action => :update, :item_id => @item.id }, { :method => :put } ) do %>
        <div><%= submit_tag 'Add' %></div>
      <%end%>

      <% end %>    


    </div>
  </div>
</div>

