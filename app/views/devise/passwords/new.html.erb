  <div class="row">
    <div class="mailercontainer">
      <br><br><br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin formforressource" }) do |f| %>
      <h1 class="deviseh1title">Mot de passe oublié?</h1>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions submitaction">
        <%= f.submit "Enoyez moi les instructions de ré-initialisation", class: "submitactionbutton" %>
      </div>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>